<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent">
        <!--미세먼지 표정아이콘-->
        <ImageView
            android:id="@+id/poulic"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:src="@drawable/smile"
            app:layout_constraintBottom_toBottomOf="@id/progressBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <!--미세먼지 표시상태바        -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:max="150"
            android:progress="100"
            android:progressDrawable="@drawable/customprogessbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--오염 텍스트-->
        <TextView
            android:id="@+id/poultt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            android:gravity="center"
            android:text="좋 음"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divibar"
            app:layout_constraintTop_toBottomOf="@id/poultt"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="#ffffff" />

        <View
            app:layout_constraintTop_toBottomOf="@id/divibar"
            android:id="@+id/contentsmain"
            android:layout_width="match_parent"
            android:layout_height="350dp" />

        <View
            android:id="@+id/divibar2"
            app:layout_constraintTop_toBottomOf="@id/contentsmain"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="#ffffff" />

        <View
            android:id="@+id/contentsmain2"
            app:layout_constraintTop_toBottomOf="@id/divibar2"
            android:layout_width="match_parent"
            android:layout_height="350dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>